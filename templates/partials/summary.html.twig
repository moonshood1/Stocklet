<div class="card summary">
    <div class="card-body">
          <p class="summaryTitle">Détails de la commande</p>
          <p class="summaryProd">{% if product.productName|length > 20 %}{{ product.productName|raw|slice(0,12) }}...
            {% else %}
            {{ product.productName }}
          {% endif %}  &nbsp; <span>x {{qty}}</span> &nbsp;
            <span class="summaryProdPrice">{{ product.unitPrice|number_format(0,'','  ') }} FCFA</span>
          </p>
          <hr />
          {# <p class="summaryPromo">Promocode: <b style="font-family: Gilroy-bold">STOCKLET20</b><span class="summaryPromoPrice">5 000 FCFA</span></p>
        <hr />  #}
        <p class="summaryTotal">Total à payer :<span class="summaryTotalPrice">{{ total|number_format(0,'','  ') }} FCFA</span></p>
    </div>
</div>