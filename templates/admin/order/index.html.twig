{% extends 'admin/base.html.twig' %}

{% block title %}Commandes{% endblock %}

{% block body %}
<div class="content-container">
  <div class="container-fluid">
        <div class="jumbotron jumbotron-fluid">
            <div class="container">
                <h1 class="display-4 text-center uppercase">Administration des Commandes</h1>
            </div>
        </div>
        <h2>Total des commandes</h2>
            <table class="table table-hover">
                <thead class="thead-dark">
                    <tr>
                    <th scope="col">Nom du client</th>
                    <th scope="col">Produit</th>
                    <th scope="col" class="">Montant total</th>
                    <th scope="col" class="">Date de commande</th>
                    <th scope="col" class="text-center">Action</th>
                    </tr>
                </thead>
                <tbody>
                {% for order in pagination.data %}
                    <tr>
                        <td>{{ order.users.firstname  }}</td>
                        <td >{{ order.products.productName }}</td>
                        <td class="">{{ order.OrderTotalAmount }} FCFA</td>
                        <td class="">{{ order.orderDate | date("d/m/Y") }}</td>
                        <td class="text-center">
                            <a href="{{ path('admin_order_delete', {'id' : order.id }) }}" class="btn btn-danger"><i class="fas fa-trash"></i></a>
                            <a href="{{ path('admin_order_show', {'id': order.id }) }}" class="btn btn-primary"><i class="fas fa-eye"></i></a>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
            {{ pagination.display() }}         
        </div>
    </div>
{% endblock %}
