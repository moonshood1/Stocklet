{% extends "admin/base.html.twig" %}
{% block title %}Création de catégorie {% endblock %}
{% block body %}
    <div class="content-container">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">
                {{ wo_render_breadcrumbs({separator: '>>'}) }}
                    <div class="card">
                        <div class="card-body">
                            <h4>
                                <a href="{{ path('admin_category_index') }}" class="btn btn-primary" style="border-radius:50%">
                                    <i class="fas fa-arrow-left fa-2x"></i> 
                                </a> 
                                Section de création d'une catégorie 
                            </h4>
                        </div>
                    </div>
                </div>
            </div>
            {% form_theme form 'bootstrap_4_horizontal_layout.html.twig' %}
            {{ form_start(form) }}
                <div class="row">
                    <div class="col-lg-12">
                        <div class="card mt-3">
                            <div class="card-body">
                                <h5 class="card-title">Infos et détails de la catégorie</h5>
                                <small><i>Créez une catégorie, la description est facultative</i></small>
                                <hr>
                                {{ form_row(form.categoryName) }}
                                {{ form_row(form.categoryDescription) }}
                                <hr>
                                <button type="submit" class="btn btn-lg btn-outline-info w-100" formnovalidate>Créer la catégorie</button>
                            </div>
                        </div>
                    </div>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}